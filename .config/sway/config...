exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec swaylock
exec swaync 
exec wl-paste --type text --watch cliphist store
exec wl-paste --type image --watch cliphist store
exec swayidle timeout 1200 nwg-lock timeout 1800 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' after-resume 'swaymsg "output * enable"' 

#monitor
output eDP-1 mode 1920x1080@60.002Hz
#pointer
input "type:pointer" {
  natural_scroll disabled
  scroll_factor 1.0
  left_handed disabled
}
#touchpad
input "type:touchpad" {
  pointer_accel 0.0
  natural_scroll enabled
  scroll_factor 1.0
  scroll_method two_finger
  click_method button_areas
  left_handed disabled
  tap disabled
  tap_button_map lrm
  drag enabled
  drag_lock disabled
  dwt enabled
  middle_emulation enabled
}
#defaults
set $term foot
set $browser zen-browser
set $filemanager nemo
set $launcher pkill rofi || rofi -show drun

# border & title
for_window [title="^.*"] border pixel 1, title_format "<b> %class >> %title </b>"
default_border pixel 1

# gaps
gaps inner 4
gaps outer 0
smart_gaps on

# font
font pango:monospace 11

# mod key used for most binds
# Mod1 = Alt
# Mod4 = Super
set $Mod Mod4

# direction keys
set $up l
set $down k
set $left j
set $right semicolon
set $launcher 'pkill rofi || rofi -show drun'
set $command 'pkill rofi || rofi -show run -config /home/nullproj/.config/rofi/alt.rasi'
set $cliphistory "pkill rofi ||cliphist list | rofi -dmenu -p select item | cliphist decode | wl-copy"
set $emoji 'pkill rofi ||rofi -modi emoji -show emoji'



### Turn off screen on lid closed
set $laptop eDP-1
bindswitch lid:on output $laptop disable
bindswitch lid:off output $laptop enable

#############         Bindings           ##################

# kill focused window
bindsym $Mod+q kill

# core applications
bindsym $Mod+Return       exec $term
bindsym $Mod+d            exec $launcher
bindsym $Mod+e            exec $emoji
bindsym Mod1+v            exec swaync-client -t
bindsym $Mod+v            exec $cliphistory
bindsym Mod1+space        exec $command

# Exit menu
bindsym $Mod+x exec $exit

# Exit sway (default way to log you out of your Wayland session)
bindsym $Mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'

# screenshot
bindsym Print exec screenshot fullscreen
bindsym Control+Print exec screenshot display
bindsym Shift+Control+Print exec screenshot swappy
bindsym Shift+Print exec screenshot region
bindsym Mod1+Print exec screenshot focused

#controlling the brightness.
bindsym Mod1+XF86MonBrightnessUp exec brightnessctl set +1%
bindsym XF86MonBrightnessUp exec brightnessctl set +5%
bindsym Mod1+XF86MonBrightnessDown exec brightnessctl set 1%-
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-

#controlling volume and Microphone
bindsym Mod1+xf86audioraisevolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%+
bindsym xf86audioraisevolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
bindsym Mod1+xf86audiolowervolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%-
bindsym xf86audiolowervolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
bindsym $Mod+m exec wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle
# backlight

# Reload the configuration file
bindsym $Mod+Shift+c reload

###########          Workspace Bindings          ###############

# switch to workspace
bindsym $Mod+grave workspace number 0
bindsym $Mod+1 workspace number 1
bindsym $Mod+2 workspace number 2
bindsym $Mod+3 workspace number 3
bindsym $Mod+4 workspace number 4
bindsym $Mod+5 workspace number 5
bindsym $Mod+6 workspace number 6
bindsym $Mod+7 workspace number 7
bindsym $Mod+8 workspace number 8
bindsym $Mod+9 workspace number 9
bindsym $Mod+0 workspace number 10

# switch to next or previous workspace
bindsym $Mod+comma workspace prev
bindsym $Mod+period workspace next

# move focused container to workspace
bindsym $Mod+CTRL+grave move container to workspace number 0
bindsym $Mod+CTRL+1 move container to workspace number 1
bindsym $Mod+CTRL+2 move container to workspace number 2
bindsym $Mod+CTRL+3 move container to workspace number 3
bindsym $Mod+CTRL+4 move container to workspace number 4
bindsym $Mod+CTRL+5 move container to workspace number 5
bindsym $Mod+CTRL+6 move container to workspace number 6
bindsym $Mod+CTRL+7 move container to workspace number 7
bindsym $Mod+CTRL+8 move container to workspace number 8
bindsym $Mod+CTRL+9 move container to workspace number 9
bindsym $Mod+CTRL+0 move container to workspace number 10


bindsym $Mod+shift+CTRL+grave move container to workspace number 0;workspace number 0
bindsym $Mod+shift+CTRL+1 move container to workspace number 1;workspace number 1
bindsym $Mod+shift+CTRL+2 move container to workspace number 2;workspace number 2
bindsym $Mod+shift+CTRL+3 move container to workspace number 3;workspace number 3
bindsym $Mod+shift+CTRL+4 move container to workspace number 4;workspace number 4
bindsym $Mod+shift+CTRL+5 move container to workspace number 5;workspace number 5
bindsym $Mod+shift+CTRL+6 move container to workspace number 6;workspace number 6
bindsym $Mod+shift+CTRL+7 move container to workspace number 7;workspace number 7
bindsym $Mod+shift+CTRL+8 move container to workspace number 8;workspace number 8
bindsym $Mod+shift+CTRL+9 move container to workspace number 9;workspace number 9
bindsym $Mod+shift+CTRL+0 move container to workspace number 10;workspace number 10
############      Container/Window control  ############

# Scratchpad, Floating
bindsym $Mod+shift+space floating toggle
floating_modifier $Mod normal #modkey to reside and move floating windows

# Sway has a "scratchpad", which is a bag of holding for windows.
# You can send windows there and get them back later.

# Move the currently focused window to the scratchpad
bindsym $Mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $Mod+minus scratchpad show

# change focus
bindsym $Mod+$left  focus left
bindsym $Mod+$down  focus down
bindsym $Mod+$up    focus up
bindsym $Mod+$right focus right

# alternatively, you can use the cursor keys:
bindsym $Mod+Left   focus left
bindsym $Mod+Down   focus down
bindsym $Mod+Up     focus up
bindsym $Mod+Right  focus right

# move focus to the parent container
bindsym $Mod+p      focus parent

# move focused window
bindsym $Mod+Shift+$left  move left
bindsym $Mod+Shift+$down  move down
bindsym $Mod+Shift+$up    move up
bindsym $Mod+Shift+$right move right

# alternatively, you can use the cursor keys:
bindsym $Mod+Shift+Up    move up
bindsym $Mod+Shift+Down  move down
bindsym $Mod+Shift+Left  move left
bindsym $Mod+Shift+Right move right

# Resizing containers
mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # Ditto, with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $Mod+r mode "resize"

# Size
bindsym Mod1+Up    resize shrink height 10 px or 1 ppt
bindsym Mod1+Down  resize grow   height 10 px or 1 ppt
bindsym Mod1+Left  resize shrink width  10 px or 1 ppt
bindsym Mod1+Right resize grow   width  10 px or 1 ppt

# layout toggle
bindsym Mod1+Tab layout toggle tabbed stacking split
bindsym $Mod+Tab layout toggle splitv splith

# switch to workspace with urgent window
for_window [urgent="latest"] focus
focus_on_window_activation   focus

# container layout
bindsym $Mod+Shift+t layout tabbed
bindsym $Mod+Shift+s layout stacking
bindsym $Mod+Shift+h layout toggle split

default_orientation horizontal

input "type:keyboard" {
  xkb_layout us
  repeat_delay 300
  repeat_rate 40
  xkb_capslock disabled
  xkb_numlock disabled
}
# make the current focus fullscreen
bindsym $Mod+Shift+f fullscreen


